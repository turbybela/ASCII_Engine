{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "cpptask",
            "command": "g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\src\\*.c*",
                "-o",
                "${workspaceFolder}\\bin\\ASCII_Engine.exe",
                "-I${workspaceFolder}\\include\\"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}